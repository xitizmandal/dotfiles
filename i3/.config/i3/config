# Pulse Audio Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master -q 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master -q 5%-
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle

# Monitor options
set $monitor Display: [l]eft [r]ight [m]irror [s]econdary [p]rimary

mode "$monitor" {
    bindsym f exec firefox, mode "default"
    bindsym l exec  --no-startup-id ~/.screenlayout/left.sh, mode "default"
    bindsym r exec  --no-startup-id ~/.screenlayout/right.sh, mode "default"
    bindsym m exec  --no-startup-id ~/.screenlayout/mirror.sh, mode "default"
    bindsym s exec  --no-startup-id ~/.screenlayout/external.sh, mode "default"
    bindsym p exec  --no-startup-id ~/.screenlayout/laptop.sh, mode "default"
    
    # back to normal: Enter or escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+x mode "$monitor"

set $logout Display: [y] logout [n] cancel
mode "$logout" {
    bindsym y exec i3-msg exit, mode "default"
    bindsym n mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"

}

bindsym $mod+Shift+e mode "$logout"
